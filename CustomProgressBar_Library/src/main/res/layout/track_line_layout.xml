<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="8dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center">

        <ImageView
            android:id="@+id/step_icon_1"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_empty" />

        <TextView
            android:id="@+id/step_label_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Customer"
            android:textSize="12sp"
            android:singleLine="true"
            android:ellipsize="end" />
    </LinearLayout>

    <View
        android:id="@+id/connector_1"
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:layout_weight="1"
        android:layout_gravity="center_vertical"
        android:background="@color/gray" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center">

        <ImageView
            android:id="@+id/step_icon_2"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_empty" />

        <TextView
            android:id="@+id/step_label_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Shipping"
            android:textSize="12sp"
            android:singleLine="true"
            android:ellipsize="end" />
    </LinearLayout>

    <View
        android:id="@+id/connector_2"
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:layout_weight="1"
        android:layout_gravity="center_vertical"
        android:background="@color/gray" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center">

        <ImageView
            android:id="@+id/step_icon_3"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_empty" />

        <TextView
            android:id="@+id/step_label_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Payment"
            android:textSize="12sp"
            android:singleLine="true"
            android:ellipsize="end" />
    </LinearLayout>

    <View
        android:id="@+id/connector_3"
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:layout_weight="1"
        android:layout_gravity="center_vertical"
        android:background="@color/gray" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center">

        <ImageView
            android:id="@+id/step_icon_4"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_empty" />

        <TextView
            android:id="@+id/step_label_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Confirm"
            android:textSize="12sp"
            android:singleLine="true"
            android:ellipsize="end" />
    </LinearLayout>

    <View
        android:id="@+id/connector_4"
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:layout_weight="1"
        android:layout_gravity="center_vertical"
        android:background="@color/gray" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center">

        <ImageView
            android:id="@+id/step_icon_5"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_empty" />

        <TextView
            android:id="@+id/step_label_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Success"
            android:textSize="12sp"
            android:singleLine="true"
            android:ellipsize="end" />
    </LinearLayout>
</LinearLayout>
